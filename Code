// Tic Tac Toe Game - Task 3

#include <iostream>
#include <sstream> 
using namespace std;

string tik[9];
int choice;
string winner;
bool flag;

void initialize() {
    for (int i = 0; i < 9; ++i) {
        stringstream ss;
        ss << i;
        tik[i] = ss.str();
    }
    winner = "";
    flag = true;
}

int play(string player) {
    cout << "Enter " << player << " choice: ";
    cin >> choice;
    while (choice < 0 || choice > 8 || tik[choice] == "X" || tik[choice] == "O") {
        cout << "Invalid move. Enter a different " << player << " choice: ";
        cin >> choice;
    }
    tik[choice] = player;
    return 0;
}

bool check() {
    if (tik[0] == tik[1] && tik[1] == tik[2]) {
        winner = tik[0];
        flag = false;
    } else if (tik[3] == tik[4] && tik[4] == tik[5]) {
        winner = tik[3];
        flag = false;
    } else if (tik[6] == tik[7] && tik[7] == tik[8]) {
        winner = tik[6];
        flag = false;
    } else if (tik[0] == tik[3] && tik[3] == tik[6]) {
        winner = tik[0];
        flag = false;
    } else if (tik[1] == tik[4] && tik[4] == tik[7]) {
        winner = tik[1];
        flag = false;
    } else if (tik[2] == tik[5] && tik[5] == tik[8]) {
        winner = tik[2];
        flag = false;
    } else if (tik[0] == tik[4] && tik[4] == tik[8]) {
        winner = tik[0];
        flag = false;
    } else if (tik[2] == tik[4] && tik[4] == tik[6]) {
        winner = tik[2];
        flag = false;
    } else {
        bool draw = true;
        for (int i = 0; i < 9; i++) {
            if (tik[i] != "X" && tik[i] != "O") {
                draw = false;
                break;
            }
        }
        if (draw) {
            winner = "Draw";
            flag = false;
        }
    }
    return flag;
}

int print() {
    for (int i = 0; i < 9; i++) {
        cout << "|" << tik[i] << "|";
        if ((i + 1) % 3 == 0) {
            cout << "\n";
            cout << "---------\n";
        }
    }
    return 0;
}

int main() {
    char playAgain;
    do {
        initialize();
        while (flag) {
            print();
            play("X");
            if (!check()) break;
            print();
            play("O");
            check();
        }
        print();
        if (winner == "Draw") {
            cout << "It's a draw!" << endl;
        } else {
            cout << winner << " won!" << endl;
        }
        cout << "Do you want to play again? (y/n): ";
        cin >> playAgain;
    } while (playAgain == 'y' || playAgain == 'Y');
    return 0;
}
